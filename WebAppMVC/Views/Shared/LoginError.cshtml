<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Form</title>
</head>
<body>
    <div>
        <h5>Login Failed</h5><br />
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div style="color: red; margin-bottom: 10px;">@ViewBag.ErrorMessage</div>
        }
        <form method="post" action="/User/Login">
            <label>Username:</label>
            <input type="text" name="Username" /><br /><br />
            <label>Password:</label>
            <input type="password" name="Password" /><br /><br />
            <button style="padding: 2px 0px; font-size: 15px;">
                <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Back</a>
            </button>
            <div style="position:relative;bottom:45px;left:75px">
            <button style="padding: 2px 0px; font-size: 15px;">
                <a class="nav-link text-dark" asp-controller="User" asp-action="Register">SignUp</a>
            </button>
            </div>

        </form>
    </div>
</body>
</html>
